<Window x:Class="ExtendedWPFApplication.AltModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExtendedWPFApplication"
        mc:Ignorable="d"
        Title="AltModeWindow" Height="450" Width="800">
    <TextBox IsReadOnly="True" IsReadOnlyCaretVisible="True" Text="{Binding Text, Mode=OneWay}" />
</Window>
